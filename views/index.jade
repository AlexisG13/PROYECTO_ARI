    div(class="container p-3 my-3 border")
      br
      pre#output.
        
      br
      pre#outputjson.
      
      button(class="btn btn-outline-success")#savejsonbtn() Generar JWT
      br
      
      
      br
    div(class="container p-3 my-3 border")
      h2 JSON encriptado con JWT (token)
      pre#textoJWT
      h2 Desencriptador JWT a JSON:
      br
      label Copia y pega el token generado arriba
      br
      input#jwt-input(type='text' name='jwt-input' class="form-control")
      br
      label Ingresa la clave para desencriptar 
      br
      input#jwt-secret(type='text' name='jwt-secret' class="form-control")
      br
      br
      button(class="btn btn-outline-success")#jwtButton() Desencriptar
    
    div(class="container p-3 my-3 border")
      br
      pre#output-jwt.
        
    div(class="container p-3 my-3 border")
      h2 Convierte objeto JSON -> .txt
      input#inputfile(type='file' name='inputfile' class="form-control")
      br
      label Ingresa el delimitador
      br
      input#input-del(type='text' class="form-control")
      div
        br
        pre#json-upload-show.
          
        pre#txt-response.
          
        #savetxtbtn
    
    div(class="container p-3 my-3 border")
      h2 Convierte un archivo .txt -> .xml 
      input#txtFile(type='file' name='filename' class="form-control")
      br
      label(for='splitter') Delimitador
      br
      input#splitter(type='text' name='splitter' class="form-control")
      br
      label(for='key') Llave
      br
      input#keyXML(type='text' name='key' class="form-control")
      br
      br
      button(class="btn btn-outline-success")#button() Convierte
    
    div(class="container p-3 my-3 border")
      h2 Convierte un archivo .xml -> .txt 
      input#xmlFile(type='file' name='filename' class="form-control")
      br
      label(for='splitter') Delimitador
      br
      input#xmlSplitter(type='text' name='splitter' class="form-control")
      br
      label(for='key') Llave
      br
      input#keyTxt(type='text' name='key' class="form-control")
      br
      br
      button(class="btn btn-outline-success")#xmlButton() Convierte
